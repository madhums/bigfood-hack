<h2>Change your password</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, inline_errors: false) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.password_field :password, help: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
  <%= f.password_field :password_confirmation %>
  <%= f.primary "Change my password" %>
<% end %>

<%= render "devise/shared/links" %>
